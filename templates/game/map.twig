{% extends "layout.twig" %}

{% block main %}
    <div class="map-container">
        <div class="location">
            <p>Právě se nacházíš na souřadnicích: <strong>{{ x }},{{ y }}</strong></p>
            <p>Nachází se zde tito hráči:</p>
            <ul>
                {% for player in location.players %}
                    <li>{{ player.username|e }}</li>
                {% endfor %}
            </ul>
        </div>
        <div class="map">
            <div class="map-row">
                <div class="hexagon far"></div>
            </div>
            <div class="map-row">
                <div class="hexagon far"></div>
                <div class="hexagon far"></div>
            </div>
            <div class="map-row">
                <div class="hexagon far"></div>
                <a class="hexagon" href="/game/map/move/{{ x }}/{{ y - 1 }}"></a>
                <div class="hexagon far"></div>
            </div>
            <div class="map-row">
                <a class="hexagon" href="/game/map/move/{{ x - 1 }}/{{ (x is even) ? y - 1 : y }}"></a>
                <a class="hexagon" href="/game/map/move/{{ x + 1 }}/{{ (x is even) ? y - 1 : y }}"></a>
            </div>
            <div class="map-row">
                <div class="hexagon far"></div>
                <div class="hexagon current">
                    <svg fill="none" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"> <path d="M10 2h4v4h-4V2zM7 7h10v2h-2v13h-2v-6h-2v6H9V9H7V7zm-2 4h2V9H5v2zm0 0v2H3v-2h2zm14 0h-2V9h2v2zm0 0h2v2h-2v-2z" fill="currentColor"/> </svg>
                </div>
                <div class="hexagon far"></div>
            </div>
            <div class="map-row">
                <a class="hexagon" href="/game/map/move/{{ x - 1 }}/{{ (x is even) ? y : y + 1 }}"></a>
                <a class="hexagon" href="/game/map/move/{{ x + 1 }}/{{ (x is even) ? y : y + 1 }}"></a>
            </div>
            <div class="map-row">
                <div class="hexagon far"></div>
                <a class="hexagon" href="/game/map/move/{{ x }}/{{ y + 1 }}"></a>
                <div class="hexagon far"></div>
            </div>
            <div class="map-row">
                <div class="hexagon far"></div>
                <div class="hexagon far"></div>
            </div>
            <div class="map-row">
                <div class="hexagon far"></div>
            </div>
        </div>
    </div>
{% endblock %}